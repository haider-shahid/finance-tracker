<table class="ui selectable celled table">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Symbol</th>
      <th>Last Price</th>
      <% if @user.id == current_user.id %>
        <th>Action</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @user_stocks.each do |stock| %>
    <tr>
      <td><%= stock.name %></td>
      <td><%= stock.ticker %></td>
      <td><%= stock.last_price %></td>
      <% if @user.id == current_user.id %>
        <td><%= link_to "Delete", user_stock_path(stock), method: :delete,
                          class:'btn btn-danger btn-sm'%></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>